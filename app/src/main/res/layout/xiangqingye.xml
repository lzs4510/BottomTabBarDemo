<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faefef"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            />
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/teaname"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#920eea"
                android:layout_height="wrap_content"
                android:text="sddsds"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/price1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="sfdsf"
                android:textColor="#ff00"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/price2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="sfdsf"
                android:textSize="20dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/introduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fgfgfg"
            android:textColor="#e110c8"
            android:paddingTop="20dp"
            android:textSize="12dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择您的口味"
            android:textColor="#ec09ec"
            android:textSize="15dp"
            android:paddingTop="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温度"
                android:textColor="#0ade2e"
                android:padding="15dp"
                android:textSize="20dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标准"
                android:background="#0bd5e7"
                android:textSize="20dp"
                android:paddingLeft="80dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="糖量"
                android:textColor="#0ad0de"
                android:textSize="20dp"
                android:padding="15dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标准"
                android:background="#130be7"
                android:textSize="20dp"
                android:paddingLeft="80dp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:background="#3c433b"
                >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="收藏"
                android:textColor="#f7e8e8"
                android:drawableTop="@drawable/my_fans_icon_normal"
                android:gravity="center"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="购物车"
                android:textColor="#f7e8e8"
                android:drawableTop="@drawable/icon_car"
                android:gravity="center"

                />
            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="加入购物车"
                android:textSize="25dp"
                android:textColor="#f7e8e8"
                android:background="#ff00"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
